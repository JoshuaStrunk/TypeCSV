    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": true,

    "tasks": [
        {
            "taskName": "run",
            "args":  [ "tsc", "--", "-p", "."],
            "isBuildCommand": true,
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "run",
            "args": ["test"],
            "isTestCommand": true
        }
    ]
}